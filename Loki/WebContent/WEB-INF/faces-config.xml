<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<application>
		<default-render-kit-id>PRIMEFACES_MOBILE</default-render-kit-id>

		<navigation-handler>
			org.primefaces.mobile.application.MobileNavigationHandler</navigation-handler>
	</application>

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<resource-bundle>
			<base-name>br.com.loki.resources.loki</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>br.com.loki.resources.loki</message-bundle>
	</application>

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.com.lume.loki.resources.loki</base-name>
			<var>isvendas</var>
		</resource-bundle>
		<message-bundle>br.com.lume.loki.resources.loki</message-bundle>
	</application>

	<lifecycle>
		<phase-listener>br.com.loki.util.AuthorizationListener</phase-listener>
	</lifecycle>

</faces-config>
